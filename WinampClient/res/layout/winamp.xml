<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent" tools:context=".WinampActivity" android:orientation="horizontal"
              android:id="@+id/layout">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prev"
            android:id="@+id/prev" android:layout_gravity="center_vertical" android:layout_weight="0.1"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/play"
            android:id="@+id/play" android:layout_gravity="center_vertical" android:layout_weight="0.1"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:id="@+id/next" android:layout_gravity="center_vertical" android:layout_weight="0.1"/>
</LinearLayout>